---
import Layout from "../../layouts/Layout.astro";
import TeamsViewWithQuery from "../../components/TeamsViewWithQuery";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: "Equipos NBA",
  description: "Los 30 equipos de la NBA con estadísticas avanzadas, plantillas y clasificaciones.",
  url: "https://elarostats.vercel.app/teams",
  isPartOf: { "@type": "WebSite", name: "elarostats" },
