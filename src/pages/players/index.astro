---
import Layout from "../../layouts/Layout.astro";
import PlayersViewWithQuery from "../../components/PlayersViewWithQuery";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: "Jugadores NBA — Clasificación por estadísticas avanzadas",
  description: "Ranking de jugadores NBA por DPM, RAPM y otras métricas avanzadas. Leaderboard actualizado de la temporada.",
  url: "https://elarostats.vercel.app/players",
