---
import Layout from "../../layouts/Layout.astro";
import LiveGameViewWithQuery from "../../components/LiveGameViewWithQuery";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "SportsEvent",
  name: "NBA Game Live",
  description: "Live NBA game stats, box scores, and game flow chart.",
  url: "https://elarostats.vercel.app/games/live",
  isPartOf: { "@type": "WebSite", name: "elarostats" },
};
---

<Layout
  title="Partido en vivo — elarostats"
  description="Estadísticas en vivo del partido NBA. Marcadores, box score y flujo del partido actualizado en tiempo real."
  jsonLd={jsonLd}
>
  <main class="mx-auto max-w-3xl px-4 py-8">
    <LiveGameViewWithQuery client:only="react" />
  </main>
</Layout>
