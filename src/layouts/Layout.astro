---
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import { ViewTransitions } from "astro:transitions";
import LiveScoresIsland from "../components/LiveScoresIsland";
import ThemeToggleWithQuery from "../components/ThemeToggleWithQuery";
import LanguageSelectorWithQuery from "../components/LanguageSelectorWithQuery";
import PlayerPageSearchWithQuery from "../components/PlayerPageSearchWithQuery";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  jsonLd?: Record<string, unknown>;
}

const {
  title,
  description = "Estadísticas avanzadas de la NBA: DPM, RAPM, resultados en vivo, plantillas de equipos y más. Tu fuente de analítica NBA.",
  ogImage = "/og-default.png",
  ogType = "website",
  jsonLd,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).href;
const ogImageUrl = ogImage.startsWith("http") ? ogImage : new URL(ogImage, Astro.site).href;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#f97316" />

    <!-- Open Graph -->
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="elarostats" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <title>{title}</title>
    <ViewTransitions />
    <Analytics />

    <!-- JSON-LD Structured Data -->
    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}

    <!-- Anti-flash: aplicar tema antes del primer paint y tras cada swap de ViewTransitions -->
    <script is:inline>
      function applyStoredTheme() {
        var stored = localStorage.getItem("elarostats-theme");
        var prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        var theme =
          stored === "light"
            ? "light"
            : stored === "dark"
              ? "dark"
              : prefersDark
                ? "dark"
                : "light";
        if (theme === "dark") document.documentElement.classList.add("dark");
        else document.documentElement.classList.remove("dark");
      }
      applyStoredTheme();
      document.addEventListener("astro:after-swap", applyStoredTheme);
    </script>
  </head>
  <body class="min-h-screen bg-white text-gray-900 dark:bg-gray-950 dark:text-white">
    <!-- Nav header -->
    <header
      transition:persist="nav"
      class="sticky top-0 z-40 border-b border-gray-200/60 bg-white/95 backdrop-blur-sm dark:border-gray-800/60 dark:bg-gray-950/95"
    >
      <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3">
        <a href="/" class="text-lg font-extrabold tracking-tight">
          elaro<span class="text-orange-500">stats</span>
        </a>
        <!-- Desktop nav (hidden on mobile) -->
        <nav id="main-nav" class="hidden items-center gap-1 sm:flex">
          <a
            href="/"
            data-nav-exact="true"
            class="nav-link rounded-lg px-3 py-1.5 text-sm font-medium text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white"
          >
            Inicio
          </a>
          <a
            href="/games"
            class="nav-link rounded-lg px-3 py-1.5 text-sm font-medium text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white"
          >
            Partidos
          </a>
          <a
            href="/teams"
            class="nav-link rounded-lg px-3 py-1.5 text-sm font-medium text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white"
          >
            Equipos
          </a>
          <a
            href="/players"
            class="nav-link rounded-lg px-3 py-1.5 text-sm font-medium text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white"
          >
            Jugadores
          </a>
        </nav>
        <div class="flex items-center gap-2">
          <div class="hidden w-44 sm:block">
            <PlayerPageSearchWithQuery client:only="react" />
          </div>
          <ThemeToggleWithQuery client:only="react" />
          <LanguageSelectorWithQuery client:only="react" />
          <!-- Hamburger button (visible only on mobile) -->
          <button
            id="mobile-menu-btn"
            class="inline-flex items-center justify-center rounded-lg p-2 text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white sm:hidden"
            aria-label="Abrir menú"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <svg id="icon-hamburger" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" class="hidden h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <!-- Mobile dropdown menu -->
      <div
        id="mobile-menu"
        class="hidden border-t border-gray-200/60 dark:border-gray-800/60 sm:hidden"
      >
        <nav id="mobile-nav" class="flex flex-col gap-1 px-4 py-3">
          <a
            href="/"
            data-nav-exact="true"
            class="mobile-nav-link rounded-lg px-3 py-2 text-sm font-medium text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white"
          >
            Inicio
          </a>
          <a
            href="/games"
            class="mobile-nav-link rounded-lg px-3 py-2 text-sm font-medium text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white"
          >
            Partidos
          </a>
          <a
            href="/teams"
            class="mobile-nav-link rounded-lg px-3 py-2 text-sm font-medium text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white"
          >
            Equipos
          </a>
          <a
            href="/players"
            class="mobile-nav-link rounded-lg px-3 py-2 text-sm font-medium text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-800/60 dark:hover:text-white"
          >
            Jugadores
          </a>
        </nav>
      </div>
      <!-- Nav script inside transition:persist so it runs once and never accumulates listeners -->
      <script is:inline>
        function updateActiveNav() {
          var path = window.location.pathname;
          var activeClasses = ["bg-gray-100", "text-gray-900", "dark:bg-gray-800", "dark:text-white"];
          var inactiveClasses = [
            "text-gray-500",
            "hover:bg-gray-100",
            "hover:text-gray-900",
            "dark:text-gray-400",
            "dark:hover:bg-gray-800/60",
            "dark:hover:text-white",
          ];
          var allNavLinks = document.querySelectorAll(".nav-link, .mobile-nav-link");
          allNavLinks.forEach(function (link) {
            var href = link.getAttribute("href");
            var isExact = link.getAttribute("data-nav-exact") === "true";
            var isActive = isExact ? path === href : href !== "/" && path.startsWith(href);
            activeClasses.forEach(function (c) {
              link.classList.toggle(c, isActive);
            });
            inactiveClasses.forEach(function (c) {
              link.classList.toggle(c, !isActive);
            });
            if (isActive) link.setAttribute("aria-current", "page");
            else link.removeAttribute("aria-current");
          });
        }

        function setupMobileMenu() {
          var btn = document.getElementById("mobile-menu-btn");
          var menu = document.getElementById("mobile-menu");
          var iconHamburger = document.getElementById("icon-hamburger");
          var iconClose = document.getElementById("icon-close");
          if (!btn || !menu) return;

          btn.addEventListener("click", function () {
            var isOpen = !menu.classList.contains("hidden");
            menu.classList.toggle("hidden", isOpen);
            btn.setAttribute("aria-expanded", String(!isOpen));
            iconHamburger.classList.toggle("hidden", !isOpen);
            iconClose.classList.toggle("hidden", isOpen);
          });

          // Close mobile menu when a link is clicked
          var mobileLinks = menu.querySelectorAll("a");
          mobileLinks.forEach(function (link) {
            link.addEventListener("click", function () {
              menu.classList.add("hidden");
              btn.setAttribute("aria-expanded", "false");
              iconHamburger.classList.remove("hidden");
              iconClose.classList.add("hidden");
            });
          });
        }

        function closeMobileMenu() {
          var btn = document.getElementById("mobile-menu-btn");
          var menu = document.getElementById("mobile-menu");
          var iconHamburger = document.getElementById("icon-hamburger");
          var iconClose = document.getElementById("icon-close");
          if (menu) menu.classList.add("hidden");
          if (btn) btn.setAttribute("aria-expanded", "false");
          if (iconHamburger) iconHamburger.classList.remove("hidden");
          if (iconClose) iconClose.classList.add("hidden");
        }

        updateActiveNav();
        setupMobileMenu();
        document.addEventListener("astro:page-load", function () {
          updateActiveNav();
          closeMobileMenu();
        });
      </script>
    </header>

    <!-- Live scores strip: transition:persist keeps it mounted during navigation -->
    <div transition:persist="live-scores">
      <LiveScoresIsland client:only="react" />
    </div>

    <!-- Page content: transition:animate="none" makes the swap instant so React islands
         don't create a double-render blink during the ViewTransitions fade -->
    <div transition:animate="none">
      <slot />
    </div>

    <SpeedInsights />
  </body>
</html>
