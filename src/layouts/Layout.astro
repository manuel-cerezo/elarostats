---
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import { ViewTransitions } from 'astro:transitions';
import LiveScoresIsland from '../components/LiveScoresIsland';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="NBA stats and analytics" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
    <Analytics />
  </head>
  <body class="min-h-screen bg-gray-950 text-white">
    <!-- Nav header -->
    <header transition:persist="nav" class="sticky top-0 z-40 border-b border-gray-800/60 bg-gray-950/95 backdrop-blur-sm">
      <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3">
        <a href="/" class="text-lg font-extrabold tracking-tight">
          elaro<span class="text-orange-500">stats</span>
        </a>
        <nav class="flex items-center gap-1">
          <a
            href="/"
            class={`rounded-lg px-3 py-1.5 text-sm font-medium transition-colors ${currentPath === '/' ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800/60 hover:text-white'}`}
          >
            Inicio
          </a>
          <a
            href="/games"
            class={`rounded-lg px-3 py-1.5 text-sm font-medium transition-colors ${currentPath.startsWith('/games') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800/60 hover:text-white'}`}
          >
            Partidos
          </a>
          <a
            href="/teams"
            class={`rounded-lg px-3 py-1.5 text-sm font-medium transition-colors ${currentPath.startsWith('/teams') ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800/60 hover:text-white'}`}
          >
            Equipos
          </a>
        </nav>
      </div>
    </header>

    <!-- Live scores strip: transition:persist keeps it mounted during navigation -->
    <div transition:persist="live-scores">
      <LiveScoresIsland client:only="react" />
    </div>

    <!-- Page content -->
    <slot />

    <SpeedInsights />
  </body>
</html>
