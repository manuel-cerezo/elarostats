---
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="NBA stats and analytics" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <Analytics />
    <!-- Anti-flash: aplicar tema antes del primer paint -->
    <script is:inline>
      (function () {
        var stored = localStorage.getItem("elarostats-theme");
        var prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        var theme = stored === "light" ? "light" : stored === "dark" ? "dark" : prefersDark ? "dark" : "light";
        if (theme === "dark") document.documentElement.classList.add("dark");
        else document.documentElement.classList.remove("dark");
      })();
    </script>
  </head>
  <body class="min-h-screen bg-white text-gray-900 dark:bg-gray-950 dark:text-white">
    <slot />
    <SpeedInsights />
  </body>
</html>
